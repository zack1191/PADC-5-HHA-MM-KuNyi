<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_small"
    app:cardBackgroundColor="@color/white_full"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/jobsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_medium"
            android:text="Housekeeping"
            android:textColor="@color/primary_text"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/jobsPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/margin_medium"
            android:text="$ 20000"
            android:textColor="@color/primary_text"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvJobPostedDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/jobsTitle"
            android:layout_marginLeft="@dimen/margin_medium"
            android:text="Posted Date"
            android:textColor="@color/black_full" />

        <TextView
            android:id="@+id/jobsDesMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvJobPostedDate"
            android:layout_margin="@dimen/margin_medium"
            android:text="Maintain a clean, sanitary and safe health care environment by daily cleaning rooms."
            android:textColor="@color/primary_text"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/jobsHours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/jobsDesMain"
            android:layout_margin="@dimen/margin_medium"
            android:drawableLeft="@drawable/ic_access_time_24dp"
            android:drawablePadding="@dimen/margin_medium"
            android:text="300 hours"
            android:textColor="@color/black_full"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/jobsLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/jobsDesMain"
            android:layout_margin="@dimen/margin_medium"
            android:drawableLeft="@drawable/ic_location_on_24dp"
            android:drawablePadding="@dimen/margin_medium"
            android:text="Pazundaung"
            android:textColor="@color/black_full"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/btnApply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/jobsHours"
            android:layout_marginBottom="@dimen/margin_large"
            android:layout_marginLeft="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_medium"
            android:background="@drawable/rounded_buttom"
            android:paddingBottom="8dp"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:paddingTop="8dp"
            android:text="Apply"
            android:textColor="@color/black_full"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/btnSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/jobsHours"
            android:layout_margin="@dimen/margin_medium"
            android:background="@drawable/margin_button"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="8dp"
            android:text="Save"
            android:textColor="@color/primary_text"
            android:textSize="20sp" />

    </RelativeLayout>


</android.support.v7.widget.CardView>