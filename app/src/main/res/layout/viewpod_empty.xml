<?xml version="1.0" encoding="utf-8"?>
<com.hha.heinhtetaung.mm_kunyi.components.EmptyViewPod xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/ivEmpty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/empty_data_placeholder" />


    <TextView
        android:id="@+id/tvRefreshEmpty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivEmpty"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_medium"
        android:text="No data to display!" />
</com.hha.heinhtetaung.mm_kunyi.components.EmptyViewPod>